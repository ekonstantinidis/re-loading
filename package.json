{
  "name": "reloading",
  "version": "0.0.5",
  "description": "A Loading component for ReactJS.",
  "main": "index.js",
  "scripts": {
    "serve": "http-server 'example/'",
    "build": "mkdir -p example/build/ && browserify -t reactify example/demo.js -o example/build/app.js",
    "watch": "npm run build && watchify -t reactify example/demo.js -o example/build/app.js -v",
    "test": "jsxhint --reporter node_modules/jshint-stylish/stylish.js '*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekonstantinidis/reloading.git"
  },
  "keywords": [
    "react",
    "loading",
    "spinner",
    "requests",
    "async",
    "component"
  ],
  "author": "Emmanouil Konstantinidis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ekonstantinidis/reloading/issues"
  },
  "homepage": "https://github.com/ekonstantinidis/reloading#readme",
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "browserify": "^10.1.2",
    "jshint-stylish": "^1.0.1",
    "jsxhint": "^0.14.0",
    "reactify": "^1.1.0",
    "watchify": "^3.2.1"
  }
}
